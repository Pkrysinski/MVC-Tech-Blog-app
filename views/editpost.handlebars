<div class="row mt-4">
  <div class="col-md-6">
    <h3>Edit Post:</h3>

    <form class="form edit-post-form">
      <div class="form-group">
        <input type="hidden" name="postId" value="{{post.id}}">
        <label for="post-subject">Title:</label>
        <input class="form-input" type="text" id="post-subject" name="post-subject" />
      </div>
      <div class="form-group">
        <label for="post-content">Content:</label>
        <textarea class="form-input" id="post-content" name="post-content"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary" data-id="{{post.id}}">Save</button>
      </div>
    </form>
  </div>

<script src="/js/editpost.js"></script>